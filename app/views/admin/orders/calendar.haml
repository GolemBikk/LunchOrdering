- content_for(:title) { 'Orders calendar' }

%header.main-content__header{ role: 'banner' }
  %h1#page-title.main-content__page-title
    = 'Orders calendar'

%section.main-content__body.main-content__body--flush
  = week_calendar do |date|
    - unless @orders_count[to_datetime date].nil?
      = link_to "Orders count: #{@orders_count[to_datetime date]}", admin_orders_path(date: date)
    - else
      = 'No orders'
